<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="327dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/style_review_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/review_list_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/main_recommend_image2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="21dp"
        android:background="@drawable/style_community_img_border"/>

    <TextView
        android:id="@+id/review_list_title"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:text="리뷰 제목"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/review_list_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_menu"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="298dp"/>

    <View
        android:layout_width="206dp"
        android:layout_height="1dp"
        android:background="#C5C3C3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="106dp"/>

    <TextView
        android:id="@+id/review_list_content"
        android:layout_width="199dp"
        android:layout_height="45dp"
        android:text="리뷰 내용입니다"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="49dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/review_list_name"
        android:layout_width="57dp"
        android:layout_height="15dp"
        android:text="닉네임"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="84dp"
        android:textColor="@color/black"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>