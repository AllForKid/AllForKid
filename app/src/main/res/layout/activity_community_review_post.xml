<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityReviewPostActivity">

    <ImageView
        android:id="@+id/btn_review_post_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="69dp"
        android:src="@drawable/img_arrow_back" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="게시글 작성"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#1C1B1F"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="69dp" />

    <Button
        android:id="@+id/btn_review_post"
        android:layout_width="60dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/style_review_post_button"
        android:layout_marginLeft="286dp"
        android:layout_marginTop="63dp"
        android:text="등록"
        android:textColor="#FFFFFF"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textSize="14sp"
        android:padding="0dp" />

    <EditText
        android:id="@+id/review_post_title"
        android:layout_width="328dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="제목을 입력해주세요."
        android:textColorHint="#A9A9A9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@null"
        android:layout_marginTop="131dp"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/img_gps"/>

    <TextView
        android:id="@+id/review_post_gps"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="위치 정보 등록"
        android:textColor="#797979"
        android:textSize="12sp"
        android:layout_marginTop="214dp"
        android:layout_marginLeft="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="별점 등록"
        android:textColor="#797979"
        android:textSize="12sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="17dp"/>

    <ImageView
        android:id="@+id/review_post_star"
        android:layout_width="131dp"
        android:layout_height="20.59dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="246dp"
        android:layout_marginLeft="81dp"
        android:src="@drawable/img_star_point"/>

    <ImageView
        android:id="@+id/review_post_img"
        android:layout_width="230dp"
        android:layout_height="236dp"
        android:layout_marginTop="310dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/review_post_content"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="내용을 입력해주세요."
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        android:background="@null"
        android:layout_marginTop="585dp"
        android:layout_marginLeft="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#B4B4B4"/>

        <ImageView
            android:id="@+id/review_post_search_photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="26dp"
            android:src="@drawable/img_search_photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/review_post_setting_photo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/img_photo_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="26dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>